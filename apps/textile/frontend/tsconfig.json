{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "baseUrl": "src",
        "paths": {
            "@/layout/*": [
                "layout/*"
            ],
            "@/demo/*": [
                "demo/*"
            ],
            "@/types/*": [
                "types/*"
            ],
            "@vidhione/theme/*": [
                "../../../packages/theme/src/*"
            ],
            "@vidhione/theme": [
                "../../../packages/theme/src"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}